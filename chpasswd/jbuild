(jbuild_version 1)

(library (
  (name doveadm)
  (synopsis "OCaml interface to doveadm")
  (libraries (unix))
  (modules doveadm)
  (wrapped false)
))

(executable (
  (name doveadmTest)
  (libraries (doveadm kaputt))
  (modules doveadmTest)
))

(library (
  (name webapp)
  (libraries (doveadm sqlite3 cryptokit netcgi2 jingoo calendar))
  (modules (
    config time
    model view controller
    template viewWeb mails
    token database modelDatabase
    modelMock mailMock viewMock webMock))
  (wrapped false)
))
